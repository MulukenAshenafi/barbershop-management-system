{
  "expo": {
    "name": "BarberBook",
    "slug": "barberbook",
    "scheme": "barberbook",
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/App Icon.jpeg",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/App Icon.jpeg",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to find nearby barbershops."
        }
      ],
      "expo-web-browser"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
